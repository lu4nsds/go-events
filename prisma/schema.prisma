generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  registrations Registration[]

  @@map("users")
}

model Event {
  id        String   @id @default(uuid())
  title     String
  description String
  imageUrl  String
  date      DateTime
  price     Float
  distance  String   @default("5km") // ex: "5km", "10km", "21km", "42km"
  createdAt DateTime @default(now())
  registrations Registration[]

  @@map("events")
}

model Registration {
  id        String   @id @default(uuid())
  userId    String
  eventId   String
  status    String   @default("pending") // "pending" | "paid"
  qrCode    String   // armazenar uma string base64 ou url de QR code
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])

  @@map("registrations")
}
